{
  "name": "@lyst/baustein",
  "version": "2.1.0",
  "scripts": {
    "build": "rm -rf dist/** && mkdir dist && npm run lint && babel src/baustein.js -o dist/baustein.js",
    "lint": "eslint src",
    "test": "NODE_ENV=test nyc mocha test/spec/baustein.js",
    "publish": "npm publish --access public"
  },
  "main": "dist/baustein.js",
  "types": "index.d.ts",
  "jsnext:main": "src/baustein.js",
  "engines": {
    "node": ">=4.x.x"
  },
  "author": "Lyst <devs@lyst.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/lyst/baustein.git"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "dist/**",
      "node_modules/**",
      "test/**",
      "Gruntfile.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register",
      "./test/jsdom"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "license": "ISC",
  "devDependencies": {
    "babel": "6.23.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-istanbul": "4.1.5",
    "babel-plugin-transform-es2015-modules-umd": "6.24.1",
    "babel-preset-env": "1.6.1",
    "babel-register": "6.26.0",
    "chai": "3.5.0",
    "eslint": "3.10.2",
    "expect.js": "0.3.1",
    "jsdom": "9.8.3",
    "mocha": "^5.2.0",
    "nyc": "^13.2.0",
    "sinon": "1.17.6"
  }
}
